# ============================================================================
# Context Blocks - Environment Variables
# ============================================================================
# Copy this file to .env.local and configure as needed
# All values shown are the defaults used if not specified

# ============================================================================
# Database (Required)
# ============================================================================
DATABASE_URL=""

# ============================================================================
# Authentication (Required - Get from Clerk Dashboard)
# ============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""
CLERK_SECRET_KEY=""
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/auth/login"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/auth/sign-up"

# ============================================================================
# OpenAI Configuration (Required)
# ============================================================================
OPENAI_API_KEY=""

# Model to use for AI responses (default: gpt-4)
OPENAI_MODEL="gpt-4"

# Optional: Override the system prompt
# SYSTEM_PROMPT="Your custom system prompt here..."

# ============================================================================
# Quota Configuration
# ============================================================================
# Maximum tokens allowed per user in the rolling window (default: 100000)
QUOTA_LIMIT="100000"

# Rolling window duration in days (default: 30)
QUOTA_WINDOW_DAYS="30"

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
# Write operations (mutations) per minute per user (default: 60)
RATE_LIMIT_WRITE_PER_MINUTE="60"

# Read operations (queries) per minute per user (default: 300)
RATE_LIMIT_READ_PER_MINUTE="300"

# Maximum concurrent SSE connections per user (default: 8)
RATE_LIMIT_SSE_CONCURRENT="8"

# ============================================================================
# Context Building Configuration
# ============================================================================
# Maximum tokens to include in AI context (default: 10000)
CONTEXT_TOKEN_LIMIT="10000"

# Maximum number of nodes to fetch for context (default: 20)
CONTEXT_MAX_NODES="20"

# ============================================================================
# SSE (Server-Sent Events) Configuration
# ============================================================================
# Keepalive interval in milliseconds (default: 15000 = 15 seconds)
SSE_KEEPALIVE_INTERVAL_MS="15000"

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL="info"

# ============================================================================
# Langfuse Configuration
# ============================================================================

# Langfuse (Cloud)
LANGFUSE_SECRET_KEY=""
LANGFUSE_PUBLIC_KEY=""
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Label to fetch (defaults to "production")
# LANGFUSE_PROMPT_LABEL=""

# Other configurations
# LANGFUSE_ENABLED=""
# LANGFUSE_PROMPT_NAME=""The traces are a bit emptyThe traces are a bit empty
# LANGFUSE_ENABLED

# ============================================================================
# Development
# ============================================================================
# NODE_ENV is typically set automatically by Next.js
# NODE_ENV="development"
